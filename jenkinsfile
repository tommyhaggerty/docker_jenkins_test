pipeline {
   agent { node 'Mac' } 
   triggers { pollSCM('H/1 * * * *')}

   stages {
      stage('Build') {
         steps {
            sh "/usr/local/bin/docker build -t tommyhaggerty/tommyhaggerty:${env.BUILD_ID} ."
         }
      }
      stage('Deploy') {
          steps {
            sh "BUILD_ID=${env.BUILD_ID} /usr/local/bin/docker stack deploy -c docker-compose.yml test"
          }
      }
   }
}