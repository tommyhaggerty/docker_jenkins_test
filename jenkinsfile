pipeline {
   agent { node 'Mac' } 

   stages {
      stage('Build') {
         steps {
            sh 'echo "I like beef, it\'s tasty. I also like chicken."> index.html' 
            sh "/usr/local/bin/docker build -t tommyhaggerty/tommyhaggerty:${env.BUILD_ID} ."
         }
      }
      stage('Deploy') {
          steps {
            sh '/usr/local/bin/docker stack deploy -c docker-compose.yml test'
          }
      }
   }
}